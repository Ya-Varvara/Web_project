<div class="container form-signin align-content-center justify-content-center">
  <h1 class="h3 fw-normal" style="margin-top: 70px; margin-bottom: 50px">Log in</h1>
  <%= form_with url: session_create_url, method: :post, local: true,class:'row g-3 justify-content-center' do |f| %>
    <div class="form-floating">
      <%= f.text_field :username, required: true, class: 'form-control',placeholder:'Username'%>
      <%= f.label :username,'Username',style:"margin-left: 10px"%>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, required: true, class: 'form-control',placeholder:'Password'%>
      <%= f.label :password,'Password',style:"margin-left: 10px"%>
    </div>
    <%= f.submit 'Submit', class:'col-4 btn btn-lg btn-primary'%>
  <% end %>
  <%= link_to 'Зарегистрироваться', new_user_path %>
</div>