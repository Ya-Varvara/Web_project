<%#= link_to 'Back', users_path %>
<div class="container">
  <div class="row" style="margin-bottom: 10px">
    <div class="col-12">
      <h3>Страница пользователя <%= @user.username %></h3>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-4">
      <ul class="list-group">
        <li class="list-group-item"><label style="margin-right: 5px">Имя:</label><span><%= @user.f_name %></span></li>
        <li class="list-group-item"><label style="margin-right: 5px">Фамилия:</label><span><%= @user.s_name %></span>
        </li>
        <li class="list-group-item"><label style="margin-right: 5px">Ник:</label><span><%= @user.username %></span></li>
        <li class="list-group-item"><label style="margin-right: 5px">Почта:</label><span><%= @user.email %></span></li>
      </ul>
    </div>
    <div class="col-8">
      <% @user_recipes.each do |recipe| %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= recipe[:image] %>" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <a href="/recipes/<%= recipe[:id] %>"><%= recipe[:name] %></a>
                <p class="card-text"><%= recipe[:time] %></p>
                <p class="card-text"><small class="text-muted"><%= @user.username %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
