<div class="container">
  <div class="row" style="margin-bottom: 10px">
    <div class="col-10">
      <h3><%=t('page.user_head') %> <%= @user.username %></h3>
    </div>
    <div class="col-2">
      <%= button_to(t('change'), edit_user_path(@user), method: :get, class: "btn btn-outline-secondary btn-sm") %>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-4">
      <ul class="list-group">
        <li class="list-group-item"><label style="margin-right: 5px"><%=t('user.f_name') %> :</label><span><%= @user.f_name %></span></li>
        <li class="list-group-item"><label style="margin-right: 5px"><%=t('user.s_name') %> :</label><span><%= @user.s_name %></span>
        </li>
        <li class="list-group-item"><label style="margin-right: 5px"><%=t('user.username') %> :</label><span><%= @user.username %></span></li>
        <li class="list-group-item"><label style="margin-right: 5px"><%=t('user.email') %> :</label><span><%= @user.email %></span></li>
      </ul>
    </div>
    <div class="col-8">
      <% @user_recipes.each do |recipe| %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= recipe[:image] %>" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <a href="/recipes/<%=recipe[:id] %>"><h4><%=recipe[:name]%></h4></a>
                <p class="card-text"><%= t('recipe.level') %>: <%=recipe[:level]%><br/>
                  <%= t('recipe.time') %>: <%= recipe[:time]%> мин</p>
                <p class="card-text"><small class="text-muted"><%=recipe[:username] %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
