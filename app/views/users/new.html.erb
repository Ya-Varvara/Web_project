<div class="form-signin">

  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <%= t('error.empty_gaps') %>
    </div>
  <% end %>

    <%= form_with(model: @user, local: true, class: "row g-3") do |form| %>
      <h1 class="h3 mb-3 fw-normal" style="margin-top: 50px"><%=t('page.fill_gaps') %></h1>

      <div class="row g-2">
        <div class="col">
          <div class="form-floating">
            <%=form.text_field :f_name, required: true, class: "form-control", :placeholder => t('user.f_name')  %>
            <label for="floatingInput" style="margin-left: 10px"><%=t('user.f_name') %></label>
          </div>
        </div>
        <div class="col">
          <div class="form-floating">
            <%=form.text_field :s_name, required: true, class: "form-control", :placeholder => t('user.s_name')  %>
            <label for="floatingInput" style="margin-left: 10px"><%=t('user.s_name') %></label>
          </div>
        </div>
      </div>

      <div class="row g-2">
        <div class="form-floating">
          <%=form.text_field :username, required: true, class: "form-control", :placeholder => t('user.username')  %>
          <label for="floatingInput" style="margin-left: 10px"><%=t('user.username') %></label>
        </div>
      </div>

      <div class="row g-2">
        <div class="form-floating">
          <%=form.email_field :email, required: true, class: "form-control", :placeholder => t('user.email')  %>
          <label for="floatingInput" style="margin-left: 10px"><%=t('user.email') %></label>
        </div>
      </div>

      <div class="row g-2">
        <div class="col">
          <div class="form-floating">
            <%=form.password_field :password, required: true, class: "form-control", :placeholder => t("password")  %>
            <label for="floatingInput" style="margin-left: 10px"><%=t('user.password') %></label>
          </div>
        </div>
        <div class="col">
          <div class="form-floating">
            <%=form.password_field :password_confirmation, required: true, class: "form-control", :placeholder => t("password")  %>
            <label for="floatingInput" style="margin-left: 10px"><%=t('user.conf_password') %></label>
          </div>
        </div>
      </div>

      <div class="col-1"></div>
      <div class="col-10">
        <%= form.submit value: t('register'), class: "w-100 btn btn-primary" %>
      </div>

      <div class="col-1"></div>
    <% end %>
  </form>
</div>