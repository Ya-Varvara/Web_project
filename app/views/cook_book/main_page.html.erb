<div>
  <h3 style="margin: 20px"><%=t('page.cook_book') %></h3>
</div>
<div class="container-md">
  <% if @recipes.empty? %>
    <div><%=t('page.no_recipes') %></div>
  <% else %>
    <% @recipes.each do |pair_recipe| %>
        <div class="row row-cols-1 row-cols-md-2 g-4" style="margin-inline: 5% ">
        <% pair_recipe.each do |recipe| %>
        <div class="col">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%=recipe[:image]%>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <a href="/recipes/<%=recipe[:id] %>"><h4><%=recipe[:name]%></h4></a>
                  <p class="card-text"><%= t('recipe.level') %>: <%=recipe[:level]%><br/>
                  <%= t('recipe.time') %>: <%= recipe[:time]%> мин</p>
                  <p class="card-text"><small class="text-muted"><%=t('user.author') %>: <%=recipe[:username] %></small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    </div>
  <% end %>
  <% end %>
</div>