<div class="form-recipe">
  <%= form_with(model: @recipe, local: true, class: "row g-3") do |form| %>

    <% if recipe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% recipe.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h1 class="h3 mb-3 fw-normal" style="margin-top: 50px">Please fill all gaps</h1>

    <div class="row g-2">
      <div class="form-floating">
        <%= form.text_field :name, class: "form-control", :placeholder => t("name") %>
        <label for="floatingInput" style="margin-left: 10px">Name</label>
      </div>
    </div>

    <div class="row g-2">
      <h4 class="h3 mb-3 fw-normal" style="margin-top: 50px">Level</h4>
      <div class="form-check form-check-inline">
        <%= form.radio_button :level, class: "form-check-input", value: "1", checked: true %>
        <%= form.radio_button :level, class: "form-check-input", value: "2" %>
        <%= form.radio_button :level, class: "form-check-input", value: "3" %>
      </div>
    </div>

    <div class="row g-2">
      <div class="form-floating">
        <%= form.text_field :time, class: "form-control", :placeholder => t("time") %>
        <label for="floatingInput" style="margin-left: 10px">Time of cooking</label>
      </div>
    </div>

    <div class="row g-2">
      <label for="floatingInput" style="margin-left: 10px">Ingredients</label>
      <%= form.text_area :ingred, class: "form-control", :placeholder => t("ingred"), rows: 3 %>
      <!--      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>-->
    </div>

    <div class="row g-2">
      <label for="floatingInput" style="margin-left: 10px">Description</label>
      <%= form.text_area :descrip, class: "form-control", :placeholder => t("descrip"), rows: 3 %>
      <!--      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>-->
    </div>
  <% end %>
</div>